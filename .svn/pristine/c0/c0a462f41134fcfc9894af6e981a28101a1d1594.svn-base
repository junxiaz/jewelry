<template>
  <div class="childRouter">
    <!-- 子路由配置 -->
    <!-- {{this.$router}} -->
    <ul ref="childRouterUl">
      <li v-for="(list,index) in routerList" :key="index" :class="{active:isActive}">
        <p>{{list.name}}</p>
      </li>
    </ul>
    
    <router-view />
  </div>
</template>

<script>
export default {
  name:"childRouter",
  data(){
    return {
      routerList:[],
      isActive:false
    }
  },
  methods:{
    routerShow(){
      console.log("router",this.$router);
      console.log("route",this.$route);
      for(var i = 0; i<this.$router.options.routes.length;i++){
        if(this.$route.path == this.$router.options.routes[i].redirect){
          this.routerList = this.$router.options.routes[i].children;
          break;
        } 
        else {
          this.routerList = [];
        }
      }
    }
    
  },
  created(){
    this.routerShow();
    // console.log("routerList",this.routerList);
    console.log(this.$refs);
  }
}
</script>

