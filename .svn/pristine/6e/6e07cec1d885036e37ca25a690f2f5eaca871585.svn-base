<template>
  <div class="childRouter">
    <!-- 子路由配置 -->
    <!-- {{this.$router}} -->
    <ul ref="childRouterUl">
      <li v-for="(list,index) in routerList" :key="index" 
        :data-index="index" :class="{'active':index == navActive}" 
        @click="setActive(list.path,$event)">
        <!-- <p> -->
          {{list.name}}
        <!-- </p> -->
      </li>
    </ul>
    
    <router-view />
  </div>
</template>

<script>
export default {
  name:"childRouter",
  data(){
    return {
      routerList:[],
      navActive:0,      
    }
  },
  methods:{
    routerShow(){
      for(var i = 0; i<this.$router.options.routes.length;i++){
        if(this.$route.path == this.$router.options.routes[i].redirect){
          this.routerList = this.$router.options.routes[i].children;
          break;
        } 
        else {
          this.routerList = [];
        }
      }
    },
    setActive(path,event){
      if(event){
        var target = event.target;
        var index = Number(target.getAttribute("data-index"));
        this.navActive = index;
        this.$router.push(path);
      }
      else{

      }
    }
    
  },
  created(){
    this.routerShow();
    // console.log("routerList",this.routerList);
  },
  mounted(){
    // this.setActive();
  }
}
</script>

