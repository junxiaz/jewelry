/*
路由器对象模块
 */
import Vue from 'vue'
import VueRouter from 'vue-router'

// import Home from '../pages/Home/Home.vue'

const Home = () => import('../pages/Home/Home.vue')

// 声明使用插件
Vue.use(VueRouter)

export default new VueRouter({
  // 所有路由
  routes: [
    {
      path: '/home',
      component: Home // 返回路由组件的函数, 只有执行此函数才会加载路由组件, 这个函数在请求对应的路由路径时才会执行
    },
    {
      path: '/',
      redirect: '/home'
    },

    //基础信息
    {
      path:"/BasicManage",
      name:"基础信息",
      redirect:"/BasicManage/variety",
      component : () => import('@/pages/BasicManage/variety.vue'),
      children : [
        {
          path:"/BasicManage/variety",
          name:"品种管理",
          component : () => import('@/pages/BasicManage/variety.vue'),
        },
        {
          path:"/BasicManage/artManage",
          name:"工艺管理",
          component : () => import('@/pages/BasicManage/artManage.vue'),
        },
      ]
    }
  ]
})